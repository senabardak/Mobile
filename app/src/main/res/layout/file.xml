<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="#e5734b"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="                        Dosyalarım"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/observation_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/vote_button"
        android:layout_toStartOf="@+id/vote_button"
        android:layout_alignBottom="@+id/vote_button"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|left"
        android:paddingLeft="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yüklü Dosya Bulunmamaktadır!"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />
</LinearLayout>